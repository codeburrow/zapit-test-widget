{% extends 'master.twig' %}

{% block content %}

    <div class="w3-container" style="margin-top: 80px;">
        <div class="w3-row-padding">

            {% if errorMessage is not null %}
                {% if success == true %}
                    <div class="w3-container w3-section w3-pale-green w3-leftbar w3-border-green w3-text-theme-d1"
                         style="text-align: center; max-width: 600px; margin: auto;">
                        <h3>{{ errorMessage }}</h3>
                    </div>
                {% else %}
                    <div class="w3-container w3-section w3-pale-red w3-leftbar w3-border-red w3-text-theme-d1"
                         style="text-align: center; max-width: 600px; margin: auto;">
                        <h3>{{ errorMessage }}</h3>
                    </div>
                {% endif %}
            {% endif %}

            <div class="w3-container w3-teal w3-center">
                <h3>It starts here.</h3>
            </div>

            <div class="w3-row w3-padding-12">
                <div class="w3-col s12 m5">&nbsp;</div>
                <div class="w3-col s12 m2">
                    <div class="w3-card-12">
                        <div class="w3-container w3-center">
                            <div id="zapitqr" style="width: 120px;"></div>
                        </div>
                    </div>
                </div>
                <div class="w3-col s12 m5">&nbsp;</div>
            </div>

        </div>
    </div>

{% endblock content %}


{% block scripts %}

    {#Local Testing#}
    {#<script src="//zapit.app/js/zapitqr.js"></script>#}

    {#Heroku#}
    <script src="//zapit-api.herokuapp.com/js/zapitqr.js"></script>

{% endblock scripts %}
